---
import { siteConfig } from "../../config/site";
---

<footer class="mt-20 border-t border-border bg-card">
    <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
        <div class="grid gap-8 md:grid-cols-3">
            <div class="space-y-3">
                <span class="text-lg font-bold text-foreground">{siteConfig.name}</span>
                <p class="text-sm text-muted-foreground">
                    {siteConfig.description}
                </p>
                <p class="text-sm text-muted-foreground">
                    {siteConfig.contact.location}
                </p>
            </div>
            <div class="space-y-3">
                <h3 class="text-sm font-semibold text-foreground">Contact</h3>
                <a
                    class="block text-sm text-muted-foreground hover:text-primary transition"
                    href={`mailto:${siteConfig.contact.email}`}
                    >{siteConfig.contact.email}</a
                >
                <a
                    class="block text-sm text-muted-foreground hover:text-primary transition"
                    href={`tel:${siteConfig.contact.phone?.replace(/\\s+/g, "")}`}
                    >{siteConfig.contact.phone}</a
                >
            </div>
            <div class="space-y-3">
                <h3 class="text-sm font-semibold text-foreground">Connect</h3>
                <div class="flex flex-wrap gap-3">
                    <a
                        href={siteConfig.socialLinks.linkedin}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-sm text-muted-foreground transition-colors hover:text-primary"
                        >LinkedIn</a
                    >
                    <a
                        href={siteConfig.socialLinks.twitter}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-sm text-muted-foreground transition-colors hover:text-primary"
                        >X</a
                    >
                    <a
                        href={siteConfig.socialLinks.github}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-sm text-muted-foreground transition-colors hover:text-primary"
                        >GitHub</a
                    >
                    <a
                        href={siteConfig.socialLinks.whatsapp}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-sm text-muted-foreground transition-colors hover:text-primary"
                        >WhatsApp</a
                    >
                </div>
            </div>
        </div>
        <div
            class="mt-8 border-t border-border pt-8 text-center text-xs text-muted-foreground"
        >
            &copy; {new Date().getFullYear()} {siteConfig.author}. All rights
            reserved.
        </div>
    </div>
</footer>
