---
import BaseLayout from "../layouts/BaseLayout.astro";
import Features from "../components/widgets/Features.astro";
import Content from "../components/widgets/Content.astro";
import Form from "../components/ui/Form.astro";
import { siteConfig } from "../config/site";

const metadata = {
    title: "Contact",
    description: "Tell us about your project and we’ll respond within 24 hours.",
};

const visionText = [
    "Tell us about your goals, constraints, and timelines. We’ll come back with a lean plan and first deliverables that move the needle.",
];
---

<BaseLayout {metadata}>
    <Content tagline="Contact" title="Let’s build together" description={visionText} />
    <div
        class="mx-auto max-w-xl bg-card border border-border rounded-3xl p-8 shadow-sm mb-12 md:mb-16"
    >
        <Form />
        <p class="mt-4 text-sm text-muted-foreground">
            Prefer email? Write to <a class="text-primary font-semibold" href={`mailto:${siteConfig.contact.email}`}>{siteConfig.contact.email}</a>.
        </p>
    </div>
    <Features
        tagline="How to reach us"
        title="Pick the channel that suits you"
        subtitle="We reply in under 24 hours on weekdays."
        classes={{ container: "pt-0 md:pt-0" }}
        features={[
            {
                title: "Email",
                description: siteConfig.contact.email,
                icon: "lucide:mail",
                iconClass: "bg-blue-500/10 text-blue-500",
            },
            {
                title: "WhatsApp",
                description: "+255 743 000 000",
                icon: "lucide:message-circle",
                iconClass: "bg-emerald-500/10 text-emerald-500",
            },
            {
                title: "Location",
                description: siteConfig.contact.location,
                icon: "lucide:map-pin",
                iconClass: "bg-indigo-500/10 text-indigo-500",
            },
            {
                title: "Phone",
                description: siteConfig.contact.phone,
                icon: "lucide:phone",
                iconClass: "bg-amber-500/10 text-amber-500",
            },
            {
                title: "Project scoping",
                description:
                    "We start with a short call to define outcomes and a 2-week sprint plan.",
                icon: "lucide:calendar-clock",
                iconClass: "bg-primary/10 text-primary",
            },
            {
                title: "Support",
                description:
                    "Clear SLAs, monitoring, and escalation paths for live products.",
                icon: "lucide:shield-check",
                iconClass: "bg-slate-500/10 text-slate-500",
            },
        ]}
    />
</BaseLayout>
