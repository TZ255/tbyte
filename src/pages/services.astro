---
import BaseLayout from "../layouts/BaseLayout.astro";
import ServiceList from "../components/widgets/ServiceList.astro";
import Content from "../components/widgets/Content.astro";
import Content2 from "../components/widgets/Content2.astro";
import devImg from "../assets/images/dev_balanced.png";
import openSourceImg from "../assets/images/open-source.png";

const services = [
    {
        title: "System Development",
        description:
            "Tailored web systems, dashboards, and internal tools that automate the way you work.",
        icon: "lucide:cpu",
    },
    {
        title: "Chatbot Development",
        description:
            "WhatsApp, Telegram, and web chatbots designed for support, lead capture, and fulfillment.",
        icon: "lucide:message-circle",
    },
    {
        title: "Football Data & Predictions",
        description:
            "Analytics pipelines and prediction models for media brands, betting communities, and fan platforms.",
        icon: "lucide:pie-chart",
    },
    {
        title: "Content Generation",
        description:
            "AI-assisted and human-refined content for blogs, campaigns, and digital products.",
        icon: "lucide:pencil",
    },
    {
        title: "Money Markets Analysis",
        description:
            "Guides and insights on Tanzanian and African markets to educate and convert your audience.",
        icon: "lucide:trending-up",
    },
];

const metadata = {
    title: "Services",
    description:
        "TanzaByte Digital builds systems, chatbots, data products, and content that help businesses grow.",
};
---

<BaseLayout {metadata}>
    <Content
        tagline="Services"
        title="Full-stack digital delivery"
        description={[
            "From architecture to launch, we pair software engineering with data, automation, and content so your team moves faster.",
        ]}
    />

    <ServiceList services={services} classes={{ container: "pt-0 md:pt-0" }} />

    <Content2
        id="service-systems"
        tagline="System Development"
        title="Resilient platforms built for growth"
        description={[
            "We design modular architectures, add observability from day one, and document the handover so your team can operate confidently.",
        ]}
        items={[
            {
                title: "APIs & integrations",
                description: "Secure APIs and connectors that keep your data flowing across tools.",
            },
            {
                title: "Automation",
                description: "Schedulers and background jobs that replace manual workflows.",
            },
        ]}
        image={devImg}
        imageAlt="Developers building dashboards"
        classes={{ container: "pt-0 md:pt-0" }}
    />

    <Content2
        id="service-chatbots"
        isReversed={true}
        tagline="Chatbot Development"
        title="Conversational funnels that convert"
        description={[
            "Design, copy, intent training, and integrations so your bot becomes a dependable channel, not a gimmick.",
        ]}
        items={[
            {
                title: "Multi-channel delivery",
                description: "WhatsApp, Telegram, and web chat with shared logic.",
            },
            {
                title: "Analytics",
                description: "Track intent completion, response times, and agent handoffs.",
            },
        ]}
        image={openSourceImg}
        imageAlt="Chat automations"
    />

    <Content
        tagline="Need something else?"
        title="Let’s plan a focused build sprint"
        description={[
            "Share your goals and constraints and we’ll propose a scoped roadmap in under 48 hours.",
        ]}
    >
        <a
            href="mailto:info@tanzabyte.com"
            class="inline-flex items-center gap-2 rounded-full bg-primary px-5 py-3 text-sm font-semibold text-white shadow-sm transition hover:-translate-y-0.5 hover:shadow-md"
        >
            Contact us
        </a>
    </Content>
</BaseLayout>
