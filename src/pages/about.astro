---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getImage } from "astro:assets";
import Content2 from "../components/widgets/Content2.astro";
import Values from "../components/widgets/Values.astro";
import aboutImage from "../assets/images/about-office.webp";

const metadata = {
    title: "About TanzaByte Digital",
    description:
        "Tanzania-born technology studio focused on reliable systems, chatbots, data products, and content.",
};

const values = [
    {
        title: "Build reliably",
        description:
            "Ship stable releases, bake in observability, and document the handover so teams can operate with confidence.",
    },
    {
        title: "Stay pragmatic",
        description:
            "Choose the simplest stack that meets the brief, keeping costs and maintenance lean.",
    },
    {
        title: "Local insight",
        description:
            "Design for the realities of African connectivity, payments, and user behavior.",
    },
    {
        title: "Data first",
        description:
            "Instrument early, model carefully, and let metrics shape the next sprint.",
    },
    {
        title: "Collaborative delivery",
        description:
            "Work in short, transparent cycles with stakeholders and domain experts.",
    },
    {
        title: "Security by default",
        description:
            "Respect customer data and follow secure coding practices from the start.",
    },
];

const optimizedImage = await getImage({
    src: aboutImage,
    format: "webp",
});
---

<BaseLayout {metadata}>
    <link slot="head" rel="preload" href={optimizedImage.src} as="image" />
    <Content2
        title="We build digital products for ambitious teams"
        description={[
            "TanzaByte Digital was founded in Moshi, Kilimanjaro to help businesses in Tanzania and across Africa move faster with dependable software. We unite engineering, data, and content so clients get one accountable team instead of juggling multiple vendors.",
            "Our work spans system development, chatbots, football analytics, and money-market education products. Each engagement is scoped for fast wins, then scaled with evidence.",
        ]}
        tagline="About"
        image={aboutImage}
        imageAlt="TanzaByte team collaborating"
        actions={[
            {
                text: "Contact",
                href: "/contact",
                variant: "primary",
                icon: "lucide:mail",
            },
            {
                text: "Our services",
                href: "/services",
                variant: "secondary",
                icon: "lucide:arrow-right",
            },
        ]}
    />
    <Values
        items={values}
        columns={3}
        tagline="How we work"
        title="Principles that guide every build"
        subtitle="A delivery approach shaped by African markets and global standards."
    />
</BaseLayout>
